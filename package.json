{
  "name": "nodejs-express-typescript",
  "version": "1.0.0",
  "description": "A simple boilerplate for nodejs, express and typescript application.",
  "main": "build/server.js",
  "scripts": {
    "build": "rm -rf ./dist && ./node_modules/.bin/tsc",
    "start": "node ./dist/server.js",
    "lint": "./node_modules/.bin/eslint --ext ts ./src",
    "internalTokenGenerate": "node ./dist/bin/tokenGenerator",
    "compodoc": "compodoc",
    "generate-docs": "compodoc -p ./tsconfig.json",
    "serve-docs": "compodoc -s ./tsconfig.json",
    "test": "node_modules/.bin/jest --forceExit --coverage --verbose --detectOpenHandles"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.4.0",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "superagent": "^5.2.2",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/body-parser": "^1.17.1",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.12.29",
    "@types/request": "^2.48.4",
    "@types/superagent": "^4.1.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "boilerplate",
    "rest",
    "apis",
    "oop",
    "MVC",
    "mongoDB"
  ],
  "author": "Darshan Shah",
  "license": "ISC"
}
